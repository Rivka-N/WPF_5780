<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="images\khaos_Installer_UI.png"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Name="pb_guest" Click="pb_guest_Click" Grid.Row="0" Content="אורח במלון" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Button Name="pb_host" Click="pb_host_Click" Grid.Row="1" Content="בעל יחידות אירוח" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Name="pb_owner" Click="pb_owner_Click" Grid.Row="2" Content="בעל האתר" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>


