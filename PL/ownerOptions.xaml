<Window x:Class="PL.ownerOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ownerOptions" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Name="pb_Orders" Grid.Row="0" Content="רשימת הזמנות" Padding="10" HorizontalAlignment="Left" VerticalAlignment="Stretch" Click="Pb_Orders_Click" />
        <Button Name="pb_Requests" Grid.Row="1" Content="בקשות אירוח" Padding="10" HorizontalAlignment="Left" VerticalAlignment="Stretch" Click="Pb_Requests_Click"/>
        <Button Name="pb_Units" Grid.Row="2" Content="יחידות אירוח" Padding="10" HorizontalAlignment="Left" VerticalAlignment="Stretch" Click="Pb_Units_Click"/>
        <TextBlock Name="tb_printInfo" HorizontalAlignment="Left" Margin="252,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="304" Grid.RowSpan="3" Width="375"/>
    </Grid>
</Window>
