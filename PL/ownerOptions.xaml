<Window x:Class="PL.ownerOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ownerOptions" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Name="pb_Orders" Grid.Row="0" Content="רשימת הזמנות" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Button Name="pb_Requests" Grid.Row="1" Content="בקשות אירוח" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Name="pb_Units" Grid.Row="2" Content="יחידות אירוח" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
