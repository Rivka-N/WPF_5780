<Window x:Class="PL.hostOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="hostOptions" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Name="pb_addUnit" Click="Pb_addUnit_Click" Grid.Row="0" Content="הוסף יחידת אירוח" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Button Name="pb_updateUnit" Click="Pb_addUnit_Click" Grid.Row="1" Content="עדכן יחידת אירוח" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Button Name="pb_order" Click="pb_order_Click" Grid.Row="2" Content="הוסף הזמנה" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    
    </Grid>
</Window>
